  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/karansapolia/music-app-project.git"
  },
  "keywords": [
    "MERN",
    "Music",
    "Player"
  ],
  "author": "Karan Sapolia <sapoliakaran@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karansapolia/music-app-project/issues"
  },
  "homepage": "https://github.com/karansapolia/music-app-project#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  }

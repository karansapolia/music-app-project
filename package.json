{
  "name": "music-app-project-new",
  "version": "1.0.0",
  "description": "A MERN Music player application",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server:dev": "cd server && yarn dev",
    "client:dev": "cd client && yarn start",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd client && yarn format && yarn lint && cd ../server && yarn format && yarn lint && cd .. && git add ."
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/karansapolia/music-app-project.git"
  },
  "keywords": [
    "MERN",
    "Music",
    "Player"
  ],
  "author": "Karan Sapolia <sapoliakaran@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karansapolia/music-app-project/issues"
  },
  "homepage": "https://github.com/karansapolia/music-app-project#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  }
}